<%= form_for @provider do |f| %>

  <% if @provider.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@location.errors.count, "error") %>
     prohibited this provider from being saved:</h2>
     <ul>
     <% @provider.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :kind %><br>
    <%= f.text_area :kind %>
  </p>

  <%= f.fields_for :locations do |builder| %>
    <%= render 'location_fields', f: builder %>
  <% end %>

  <%= f.submit %>
<% end %>
